<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="@color/white">

    <!-- Ảnh đại diện -->
    <ImageView
        android:id="@+id/imgAvatar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        android:src="@drawable/avatar_placeholder"
        android:background="@drawable/rounded_image_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:contentDescription="avatar" />

    <!-- Thông tin nhân viên -->
    <LinearLayout
        android:id="@+id/employeeInfoLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/imgAvatar"
        app:layout_constraintTop_toTopOf="@id/imgAvatar"
        app:layout_constraintBottom_toBottomOf="@id/imgAvatar"
        app:layout_constraintEnd_toStartOf="@id/actionButtonsLayout">

        <TextView
            android:id="@+id/tvMaNV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MNV: NV001"
            android:textStyle="bold"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tvTenNV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên: Nguyễn Văn A" />

        <TextView
            android:id="@+id/tvSoDT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SĐT: 0123456789" />

        <TextView
            android:id="@+id/tvChucVu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chức vụ: Nhân viên" />
    </LinearLayout>

    <!-- Các nút chức năng -->
    <LinearLayout
        android:id="@+id/actionButtonsLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@id/imgAvatar"
        app:layout_constraintBottom_toBottomOf="@id/imgAvatar"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/btnView"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/ic_view"
            android:contentDescription="Xem" />

        <ImageView
            android:id="@+id/btnDelete"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/ic_delete"
            android:contentDescription="Xoá" />

        <ImageView
            android:id="@+id/btnEdit"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_edit"
            android:contentDescription="Sửa" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
