<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:layout_margin="12dp"
    android:background="@drawable/bg_item_shift"
    android:padding="12dp">

    <!-- Tên ca -->
    <TextView
        android:id="@+id/tvShiftName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Ca sáng"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Icon đồng hồ -->
    <ImageView
        android:id="@+id/imgClock"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_clock"
        app:layout_constraintTop_toBottomOf="@id/tvShiftName"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Giờ ca -->
    <TextView
        android:id="@+id/tvShiftTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6:00 - 10:30"
        android:textSize="18sp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/imgClock"
        app:layout_constraintBottom_toBottomOf="@id/imgClock"
        app:layout_constraintStart_toEndOf="@id/imgClock" />

    <!-- Gợi ý chi tiết -->
    <TextView
        android:id="@+id/tvDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bấm để xem chi tiết"
        android:textSize="18sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.875"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvShiftTime" />
</androidx.constraintlayout.widget.ConstraintLayout>
